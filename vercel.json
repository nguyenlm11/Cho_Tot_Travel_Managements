{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/chatHub(/(.*))?",
      "dest": "https://capstone-bookinghomestay.onrender.com/chatHub$1",
      "headers": {
        "Upgrade": "websocket",
        "Connection": "Upgrade"
      },
      "continue": true
    },
    {
      "src": "/api/(.*)",
      "dest": "https://capstone-bookinghomestay.onrender.com/api/$1"
    },
    {
      "src": "/chat/(.*)",
      "dest": "https://capstone-bookinghomestay.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}